#include<stdio.h>
int main(){
	int n,i,sum=0,avg=0,c;
	printf("enter the no.of numbers to be summed up ");
	scanf("%d",&n);
	for (i=1;i<=n;i++){
		printf("enter the number ");
		scanf("%d",&c);
		sum=sum+c;
		
	}
	avg=sum/n;
	printf("the sum of the numbers are %d \nthe average of the numbers are %d ",sum,avg);
	return 0;
}
